<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC5858"
    android:padding="16dp">

    <View
        android:id="@+id/circle"
        android:layout_width="395dp"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-95dp"
        android:layout_marginTop="-11dp"
        android:background="@drawable/circle_background" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle"
        android:layout_centerHorizontal="true"
        android:text="PUP Match: Your University Connection Hub"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:text="Connect with fellow authorized PUP students and build a vibrant university experience, together."
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Replace with your arrow drawable -->
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="331dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="41dp"
        android:src="@drawable/right"
        android:contentDescription="Next" />


</RelativeLayout>
